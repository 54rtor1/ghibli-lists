
<div class="container p-5">
  <h1 class="title p-5 text-center">Ghibli lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-sm-4 p-3">
     <div class="card card-index">
        <div class="card-body overflow-scroll">
            <h5 class="card-title text-center"><%= link_to list_path(list), class: "btn btn-flat stretched-link" do %>
            <%= list.name %>
            <% end %></h5>
            <div class="posters row justify-content-between"><% @bookmarks = list.bookmarks %>
              <% @bookmarks.each do |bookmark| %>
                <% @movie_id = bookmark.movie_id %>
                <% @movie = Movie.where(id: @movie_id).select(:id, :poster_url).take %>
                <div class ="poster col-4"><%= image_tag @movie.poster_url %>
                </div>
              <% end %></p>
            </div>
          </div>
      </div>
    </div>
    <% end %>
    <%= link_to "Create new movie list", new_list_path, class: "btn btn-flat p-5" %>
  </div>
</div><!--.container-->
