
<div class="container p-5">
  <h1 class="title p-5 text-center">my lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
    <div class="col-sm-6 p-3">
     <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= link_to list_path(list), class: "btn btn-flat stretched-link" do %>
              <%= list.name %>
            <% end %></h5>
            <p>movies on list</p>
        </div>
      </div>
    </div>
    <% end %>
    <%= link_to "Create new movie list", new_list_path, class: "btn btn-flat p-5" %>
  </div>
</div><!--.container-->
